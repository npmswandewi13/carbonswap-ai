{
  "compilerOptions": {
    // "allowImportingTsExtensions": true,
    "noEmit": false,
    "outDir": "./dist",
    "module": "nodenext",
    "target": "esnext",
    "types": ["node"],
    "lib": ["esnext"],
    "sourceMap": true,
    "declaration": true,
    "declarationMap": true,
    // Temporarily disable these for build to pass
    "exactOptionalPropertyTypes": false,
    "noUncheckedIndexedAccess": false,
    "strict": true,
    "jsx": "react-jsx",
    "verbatimModuleSyntax": false,
    "isolatedModules": true,
    "noUncheckedSideEffectImports": true,
    "moduleDetection": "force",
    "skipLibCheck": true
  },
  "ts-node": {
    "transpileOnly": true
  },
  "include": ["**/*"],
  "exclude": ["node_modules", "dist"]
}